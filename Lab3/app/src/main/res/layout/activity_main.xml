<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/GilbertScott"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gilbert_scott_building"
        app:layout_constraintBottom_toTopOf="@+id/SirAlwynWilliams"
        app:layout_constraintEnd_toEndOf="@+id/SirAlwynWilliams"
        app:layout_constraintStart_toStartOf="@+id/SirAlwynWilliams"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BoydOrr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/boyd_orr_building"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/SirAlwynWilliams"
        app:layout_constraintStart_toStartOf="@+id/SirAlwynWilliams"
        app:layout_constraintTop_toBottomOf="@+id/SirAlwynWilliams" />

    <Button
        android:id="@+id/SirAlwynWilliams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sir_alwyn_williams_building"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>